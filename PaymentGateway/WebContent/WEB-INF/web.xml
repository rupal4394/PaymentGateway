 </servlet-mapping>
 
  <servlet>
 	<servlet-name>payment</servlet-name>
 	<servlet-class>com.payment.PaymentController</servlet-class>
 </servlet>
 
 <servlet-mapping>
 	<servlet-name>payment</servlet-name>
 	<url-pattern>/payment</url-pattern>
 </servlet-mapping>
 
</web-app>